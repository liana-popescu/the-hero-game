#!/usr/bin/env php
<?php

include './Battle/Intervals/NumericInterval.php';
include './Battle/Intervals/PercentageInterval.php';
include './Battle/Skills/Skills.php';
include './Battle/Skills/Skill.php';
include './Battle/Skills/RapidStrike.php';
include './Battle/Skills/MagicShield.php';
include './Battle/States/State.php';
include './Battle/Creatures/Creature.php';
include './Battle/Battle.php';


$hero = new Creature(
    'Orderus',
    new NumericInterval(70,100),
    new NumericInterval(70,80),
    new NumericInterval(45,55),
    new NumericInterval(40,50),
    new PercentageInterval(10,30),
    new Skills(
        new RapidStrike(10, Skill::ATTACK),
        new MagicShield(20, Skill::DEFENCE)
    ),
    new State()
);

$wildBeast = new Creature(
    'Salerus',
    new NumericInterval(60,90),
    new NumericInterval(60,90),
    new NumericInterval(45,60),
    new NumericInterval(40,60),
    new PercentageInterval(25,40),
    new Skills(),
    new State()
);

$battle = new Battle($hero, $wildBeast, 20);

$battle->start();